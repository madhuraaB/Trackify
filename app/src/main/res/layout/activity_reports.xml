<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA"
    tools:context=".ReportsActivity">

    <!-- Top Bar with Back Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_back_to_home"
        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Back"
        android:textColor="#007BFF"
        android:textSize="16sp"
        app:icon="@drawable/ic_arrow_back"
        app:iconTint="#007BFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Title -->
    <TextView
        android:id="@+id/title_reports"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="sans-serif-black"
        android:text="Financial Reports"
        android:textColor="#1A237E"
        android:textSize="28sp"
        android:paddingHorizontal="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_back_to_home" />

    <!-- Tab Layout for Report Switching -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout_reports"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@id/title_reports"
        app:tabIndicatorColor="#007BFF"
        app:tabIndicatorHeight="3dp"
        app:tabMode="scrollable"
        app:tabSelectedTextColor="#1A237E"
        app:tabTextColor="#6C757D"
        app:tabPaddingStart="8dp"
        app:tabPaddingEnd="8dp"/>

    <!-- ViewPager2 to host the Report Fragments -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager_reports"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tab_layout_reports"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
