<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Category Icon Placeholder -->
        <ImageView
            android:id="@+id/image_category_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_dashboard"
            app:tint="#007BFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="Category Icon" />

        <!-- Category Name -->
        <TextView
            android:id="@+id/text_category_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="sans-serif-medium"
            android:textColor="#333333"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/text_amount_spent"
            app:layout_constraintStart_toEndOf="@+id/image_category_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/progress_category"
            tools:text="Food &amp; Dining" />

        <!-- Amount Spent -->
        <TextView
            android:id="@+id/text_amount_spent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:textColor="#1A237E"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/progress_category"
            tools:text="â‚¹ 5,200.00" />

        <!-- Progress Bar (Represents percentage of total spending for the month) -->
        <ProgressBar
            android:id="@+id/progress_category"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/text_category_name"
            app:layout_constraintTop_toBottomOf="@+id/text_category_name"
            tools:progress="65" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
