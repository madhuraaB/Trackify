<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissions must be direct children of the <manifest> tag -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- Needed for modern Android versions (API 33+) to send notifications -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Trackify"
        tools:targetApi="31">

        <!-- All screens (Activities) used in the app are declared here. -->

        <!-- Main Dashboard Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="false" />

        <!-- Activity to view and manage all transactions -->
        <activity
            android:name=".HomeActivity"
            android:exported="false" />

        <!-- Activity to add or edit a transaction (Inferred from MainActivity.java) -->
        <activity
            android:name=".AddExpenseActivity"
            android:exported="false" />

        <!-- User Profile/Settings Activity -->
        <activity
            android:name=".ProfileActivity"
            android:exported="false" />

        <!-- Login Screen -->
        <activity
            android:name=".LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.Trackify.NoActionBar" />

        <!-- Registration Screen - Set as the LAUNCHER entry point -->
        <activity
            android:name=".RegisterActivity"
            android:exported="true"
            android:theme="@style/Theme.Trackify.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
